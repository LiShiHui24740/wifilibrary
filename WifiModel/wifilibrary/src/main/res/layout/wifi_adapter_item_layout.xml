<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="5dp"
              android:orientation="horizontal"
              android:gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/id_iv_wifi_connected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_connected"
        android:padding="2dp"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/id_tv_wifi_ssid_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:lines="1"
        android:ellipsize="end"
        android:text="wifiname"
        android:textSize="18sp"
        android:textColor="#4d4d4d"
        />
    <ImageView
        android:id="@+id/id_iv_wifi_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_lock"
        android:layout_margin="10dp"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/id_iv_wifi_signal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_set_wifi_1"
        android:visibility="invisible"
        />
</LinearLayout>