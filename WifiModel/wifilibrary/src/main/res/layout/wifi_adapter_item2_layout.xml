<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              android:id="@+id/id_id_wifi2_container"
    >


    <ImageView
        android:id="@+id/id_iv_wifi2_signal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_set_wifi_1"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    >

    <ImageView
        android:id="@+id/id_iv_wifi2_connected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_connected"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/id_tv_wifi2_ssid_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:text="wifiname"
        android:textColor="#4d4d4d"
        android:textSize="18sp"
        android:padding="5dp"
        />
</LinearLayout>


</LinearLayout>