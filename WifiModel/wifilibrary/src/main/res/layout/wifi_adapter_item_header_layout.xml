<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_rl_title_top_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <ImageView
        android:id="@+id/id_tv_wifi_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20px"
        android:background="@drawable/selector_bg_pressed"
        android:padding="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/wifi_icon_back"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_iv_wifi"
            android:layout_width="58px"
            android:layout_height="match_parent"
            android:layout_marginRight="20px"
            android:src="@drawable/icon_setup_wifi" />

        <TextView
            android:id="@+id/id_tv_wifi_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="WiFi连接"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/id_cb_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_ic_wifi_toggle"
        android:button="@null" />


</LinearLayout>