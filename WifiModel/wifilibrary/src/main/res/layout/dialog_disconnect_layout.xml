<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/shape_dialog_bg"
              android:orientation="vertical"
    >

    <TextView
        android:id="@+id/id_tv_forget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="你想要忘记该网络吗?"
        android:textColor="#1a1a1a"
        android:textSize="20sp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#55aaaaaa"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/id_tv_dialog_forget_wifi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_bg_left_pressed"
            android:gravity="center"
            android:padding="16dp"
            android:text="忘记网络"
            android:textColor="#1a1a1a"
            android:textSize="18sp"
            />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#55aaaaaa"
            />

        <TextView
            android:id="@+id/id_tv_dialog_forget_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_bg_right_pressed"
            android:gravity="center"
            android:padding="16dp"
            android:text="取消"
            android:textColor="#1a1a1a"
            android:textSize="18sp"
            />
    </LinearLayout>
</LinearLayout>