<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_dialog_bg"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/id_tv_dialog_wifi_ssid_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="wifiname"
            android:textColor="#1a1a1a"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/id_et_dialog_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_et_bg"
            android:hint="密码"
            android:inputType="textPassword"
            android:lines="1"
            android:padding="10dp"
            android:textColor="#4d4d4d"
            android:textSize="18sp"
            />

        <CheckBox
            android:id="@+id/id_cb_dialog_show_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="显示密码"
            android:textColor="#1a1a1a"
            android:textSize="18sp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#55aaaaaa"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/id_tv_dialog_connect_wifi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_bg_left_pressed"
            android:enabled="false"
            android:gravity="center"
            android:padding="16dp"
            android:text="连接"
            android:textColor="@color/selector_textcolor"
            android:textSize="18sp"
            />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#55aaaaaa"
            />

        <TextView
            android:id="@+id/id_tv_dialog_forget"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_bg_pressed"
            android:gravity="center"
            android:padding="16dp"
            android:text="忘记网络"
            android:textColor="#1a1a1a"
            android:textSize="18sp"
            />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#55aaaaaa"
            />

        <TextView
            android:id="@+id/id_tv_dialog_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_bg_right_pressed"
            android:gravity="center"
            android:padding="16dp"
            android:text="取消"
            android:textColor="#1a1a1a"
            android:textSize="18sp"
            />

    </LinearLayout>
</LinearLayout>